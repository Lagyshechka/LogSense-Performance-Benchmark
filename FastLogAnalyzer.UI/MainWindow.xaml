<Window x:Class="FastLogAnalyzer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastLogAnalyzer.UI"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="LogSense - Benchmark" Height="550" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Controls -->
            <RowDefinition Height="*"/>    <!-- Chart -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- 1. Header -->
        <TextBlock Text="Log Performance Analyzer" FontSize="24" FontWeight="Bold" Foreground="#333"/>
        
        <!-- 2. Controls -->
        <StackPanel Grid.Row="1" Margin="0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Text="{Binding FilePath}" IsReadOnly="True" VerticalContentAlignment="Center" Padding="5"/>
                <Button Grid.Column="1" Content="Browse..." Command="{Binding SelectFileCommand}" Padding="10,5" Margin="10,0,0,0"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="0,15" HorizontalAlignment="Center">
                <TextBlock Text="Legacy Mode" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <CheckBox IsChecked="{Binding UseFastParser}" Content="Use Span&lt;T&gt; (Fast Mode)" 
                          VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold"/>
            </StackPanel>

            <!-- IsEnabled -->
            <Button Content="RUN BENCHMARK" Command="{Binding RunBenchmarkCommand}" 
                    Padding="20,10" FontWeight="Bold" Background="#007ACC" Foreground="White" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- 3. Chart -->
        <Border Grid.Row="2" BorderBrush="#EEE" BorderThickness="1" Margin="0,10">
            <lvc:CartesianChart Series="{Binding Series}">
            </lvc:CartesianChart>
        </Border>

        <!-- 4. Results -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>    
                <ColumnDefinition Width="Auto"/> 
            </Grid.ColumnDefinitions>

            <!-- (Status) -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="Status: " FontWeight="Bold"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="Gray"/>
            </StackPanel>
            
            <!-- (Stats) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                 <TextBlock Text="Peak RAM: " FontWeight="Bold"/>
                 <TextBlock Text="{Binding PeakMemory}" Foreground="#D9534F"/>
                 <TextBlock Text=" MB" Margin="0,0,15,0"/>

                 <TextBlock Text="Time: " FontWeight="Bold"/>
                 <TextBlock Text="{Binding ElapsedTime, StringFormat=N3}" Foreground="#007ACC"/>
                 <TextBlock Text=" sec"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>